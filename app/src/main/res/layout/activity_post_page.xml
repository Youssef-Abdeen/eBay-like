<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LenoraUS5.PostPage">

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="116dp"
        android:layout_height="108dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="528dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/selectImageButton"
        android:layout_width="205dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:text="Product Name"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/imageButton2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageButton2" />

    <EditText
        android:id="@+id/postDesc"
        android:layout_width="289dp"
        android:layout_height="138dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="240dp"
        android:ems="10"
        android:gravity="start|top"
        android:textSize="14dp"
        android:hint="What would you like to share about your product?"
        android:inputType="textMultiLine"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/uploadPostButton"
        android:layout_width="181dp"
        android:layout_height="65dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="96dp"
        android:text="Upload Post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/descriptionTitle"
        android:layout_width="238dp"
        android:layout_height="20dp"
        android:layout_marginStart="50dp"
        android:ems="10"
        android:textSize="17dp"
        android:minHeight="50dp"
        android:scaleX="1"
        android:scaleY="1"
        android:text="Description"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/postDesc"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/productCategory"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Enter product category"
        android:textSize="17dp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="236dp"
        app:layout_constraintBottom_toTopOf="@+id/productCat"
        app:layout_constraintStart_toStartOf="@+id/postDesc"
        />

    <EditText
        android:id="@+id/productName"
        android:layout_width="205dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@+id/selectImageButton"
        app:layout_constraintTop_toBottomOf="@+id/selectImageButton"
        />
    
    <Spinner
        android:id="@+id/productCat"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/descriptionTitle"
        app:layout_constraintStart_toStartOf="@+id/postDesc" />

    <EditText
        android:id="@+id/productValue"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:hint="Product Value"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/postDesc"
        app:layout_constraintTop_toBottomOf="@+id/postDesc" />

    <TextView
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:text="$"
        android:textSize="22sp"
        android:layout_marginTop="23dp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="236dp"
        app:layout_constraintTop_toBottomOf="@+id/postDesc"
        app:layout_constraintEnd_toStartOf="@+id/productValue"
        />


</androidx.constraintlayout.widget.ConstraintLayout>